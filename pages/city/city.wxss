.loaction-city,.welcome-city{
  padding:10px;
  display: flex;
  flex-direction: column;
  font-size: 12px;

}
.welcome-city-list,.loaction-city-list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top:5px;
}
.loaction-city-list{
  justify-content: flex-start;

}
.welcome-city-item,.location-city-item{
  font-size: 12px;
  padding: 8px;
  width:32%;
  background: #eee;
  box-sizing: border-box;
  text-align: center;
  border-radius: 3px;
  margin-top: 5px;
}
.location-city-item{
  margin-right: 5px;
}
.loaction-city-lable,.welcome-city-label,.loaction-city-label{
  color:#999;
}
.all-server-city{
  display: flex;
  flex-direction: column;
  padding:10px;
  font-size: 12px;
}
.all-server-item{
  display: block;
  padding: 10px;
  border-bottom: 1px solid #f2f2f2;
}
 .all-server-city{
  position: relative;
} 
.word-list{
  position: absolute;
  display: flex;
  flex-direction: column;
  top:30px;
  right:10px;
  font-size: 25rpx;
  color:#ffc400
}
page,scroll-view,.city-container{
  height: 100%;
}
