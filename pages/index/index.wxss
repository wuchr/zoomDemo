@import './stylesheet.wxss';
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.top-container{
  display: flex;
  flex-direction: row;
  padding:5px;
  align-items: center;
  font-size: 12px;
}
.top-arraw{
  display: block;
  position: relative;
  top:2px;
  left:5px;
  height:0px;
  width: 0px;
  border-width: 5px;
  border-style: solid;
  border-color: black transparent transparent;
}
.top-message{
  width:20px;
  height: 20px;
  margin-left:10px;
}
.top-input{
  margin-left: 10px;
  flex-grow: 1;
  position: relative;
}
.top-input input{
  border: 1px solid #f2f2f2;
  padding:8px 5px;
  border-radius: 5px;
  background: #f2f2f2;
  padding-left: 25px;
}
.top-serch{
  position: absolute;
  bottom:8px;
  font-size:20px;
  left:5px;

}
.swiper-container{
  height:100px;
  width:100%;
}
.swiper-container swiper{
  height:100%;
  width:100%;
}
.swiper-container swiper image{
  width:100%;
}
.category-con{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content:space-around;
  margin-top:15px;
  font-size: 12px;
}
.category-item{
  width:24%;
  height: 60px;
  border-radius: 5px;
  border:1px solid #f2f2f2;
  box-sizing: border-box;
  position: relative;
  padding:5px;
  box-shadow: 0 1px 1px #f2f2f2;
}

.category-item-circle{
  width:0;
  height:0;
  border-width:0 0 10px 10px;
  border-style:solid;
  position: absolute;
  right:0;
  bottom: -1px;
}
.circle-red{
  border-color:#f57a7a transparent;
}
.circle-green{
  border-color: #a5d898 transparent;
}
.circle-origin{
  border-color:  #ff9800 transparent;
}
.circle-blue{
  border-color:  #03a9f4 transparent;
}
.zoom-container{
  padding:10px;
}
.title{
  font-weight: bold;
  font-size: 12px;
  display: block;
}
.title-tag-red {
  color:#f57a7a;
  transform:scale(0.5);
}
.renting-container{
  display: flex;
  justify-content: space-around;
  margin-top:10px;
  flex-wrap: wrap;
}
.renting-item-b{
  width:40%;
  padding:5px;
  box-sizing: border-box;
  margin-top:5px;
  border-radius: 3px;
}
.renting-item-s{
  width:28%;  
  border:1px solid #f2f2f2;
  padding:5px 5px 10px;
  box-sizing: border-box;
  margin-top:5px;
  border-radius: 3px;
  
}
.renting-container .title-tag{
  font-size: 12px;
  color:#666;
}
.renting-item-b1,.renting-item-s1{
  background: #ece9de;
  background: linear-gradient(#efdeab,#ece9de);
}
.renting-item-b2,.renting-item-s2{
  background: linear-gradient(#f7c0d2,#e9ced7)
}
.renting-item-b3,.renting-item-s3{
  background: linear-gradient(#b6ddf0,#dfedf5)
}
